<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MatchActivity">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        tools:text="22.09.2019" />

    <TextView
        android:id="@+id/tv_game_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        tools:text="Qualification" />

    <TextView
        android:id="@+id/tv_stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_game_type"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        tools:text="Some stadium" />

    <TextView
        android:id="@+id/tv_teams_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stadium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/teams_divider"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large_32" />

    <TextView
        android:id="@+id/tv_host_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stadium"
        android:layout_marginTop="44dp"
        android:layout_marginRight="@dimen/spacing_small_8"
        android:layout_toLeftOf="@id/tv_teams_divider"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large_32"
        tools:text="5" />

    <TextView
        android:id="@+id/tv_guest_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stadium"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/tv_teams_divider"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large_32"
        tools:text="5" />

    <ImageView
        android:id="@+id/iv_host_emblem"
        android:layout_width="@dimen/emblem_big_120"
        android:layout_height="@dimen/emblem_big_120"
        android:layout_below="@id/tv_stadium"
        android:layout_marginTop="@dimen/spacing_normal_24"
        android:layout_marginRight="@dimen/spacing_normal_24"
        android:layout_toLeftOf="@+id/tv_host_goals"
        tools:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_host_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_host_emblem"
        android:layout_alignRight="@id/iv_host_emblem"
        tools:text="Team one" />

    <ImageView
        android:id="@+id/iv_guest_emblem"
        android:layout_width="@dimen/emblem_big_120"
        android:layout_height="@dimen/emblem_big_120"
        android:layout_below="@id/tv_stadium"
        android:layout_marginLeft="@dimen/spacing_normal_24"
        android:layout_marginTop="@dimen/spacing_normal_24"
        android:layout_toRightOf="@id/tv_guest_goals"
        tools:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_guest_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_host_emblem"
        android:layout_alignLeft="@id/iv_guest_emblem"
        tools:text="Team two" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_teams_divider"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:layout_marginTop="100dp"
        android:text="@string/experts_opinion"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_large_32" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label"
        android:layout_margin="@dimen/spacing_little_4"
        android:textSize="@dimen/text_normal_20"
        tools:text="Some words from experts" />

</RelativeLayout>