<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="@dimen/card_edge_spacing">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_article_photo"
            android:layout_width="@dimen/photo_big_110"
            android:layout_height="@dimen/photo_big_110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_normal_24"
            tools:background="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small_8"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:layout_marginRight="@dimen/spacing_small_8"
            android:layout_toRightOf="@id/iv_article_photo"
            android:fontFamily="sans-serif-medium"
            android:maxLength="75"
            android:maxLines="2"
            android:textColor="@android:color/black"
            tools:text="Very very long article title to test multiline attribute." />

        <TextView
            android:id="@+id/tv_article_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_article_title"
            android:layout_margin="@dimen/spacing_little_4"
            android:layout_toRightOf="@+id/iv_article_photo"
            android:maxLength="230"
            android:maxLines="8"
            tools:text="Some very long text which is general description of the article..." />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_article_photo"
            android:layout_margin="@dimen/spacing_small_8"
            android:layout_toLeftOf="@id/tv_article_description"
            tools:text="Mail.ru" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>