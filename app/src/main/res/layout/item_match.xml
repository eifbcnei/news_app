<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/themeColorCardBackground">

        <ImageView
            android:id="@+id/iv_team_host"
            android:layout_width="@dimen/emblem_small"
            android:layout_height="@dimen/emblem_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:src="@drawable/ic_unknown_team_50dp" />

        <TextView
            android:id="@+id/tv_host_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_toLeftOf="@id/tv_goals_divider"
            android:textColor="?attr/themeColorTextSecondary"
            android:textSize="32sp"
            tools:text="5" />

        <TextView
            android:id="@+id/tv_goals_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/teams_divider"
            android:textColor="?attr/themeColorTextSecondary"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goals_divider"
            android:layout_centerHorizontal="true"
            android:textColor="?attr/themeColorTextPrimary"
            tools:text="11.11.2019" />

        <TextView
            android:id="@+id/tv_guest_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_toRightOf="@id/tv_goals_divider"
            android:textColor="?attr/themeColorTextSecondary"
            android:textSize="@dimen/text_large"
            tools:text="2" />

        <ImageView
            android:id="@+id/iv_team_guest"
            android:layout_width="@dimen/emblem_small"
            android:layout_height="@dimen/emblem_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:src="@drawable/ic_unknown_team_50dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>