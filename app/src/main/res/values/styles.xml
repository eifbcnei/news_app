<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>


    <style name="AppTheme.Day">
        <item name="themeColorPrimary">@color/blue</item>
        <item name="themeColorPrimaryDark">@color/dark_blue</item>
        <item name="themeColorAccent">@color/red</item>
        <item name="themeColorAccentDark">@color/violet</item>
        <item name="themeColorBackground">@color/light_blue</item>
        <item name="themeColorCardBackground">@color/white</item>
        <item name="themeColorTextPrimary">@color/black</item>
        <item name="themeColorTextSecondary">@color/light_gray</item>
        <item name="themeColorTextAccent">@color/white</item>
        <item name="themeColorIcon">@color/white</item>
    </style>

    <style name="AppTheme.Night">
        <item name="themeColorPrimary">@color/dark_gray</item>
        <item name="themeColorPrimaryDark">@color/gray</item>
        <item name="themeColorAccent">@color/blue</item>
        <item name="themeColorAccentDark">@color/dark_blue</item>
        <item name="themeColorBackground">@color/light_gray</item>
        <item name="themeColorCardBackground">@color/gray</item>
        <item name="themeColorTextPrimary">@color/dark_orange</item>
        <item name="themeColorTextSecondary">@color/light_orange</item>
        <item name="themeColorTextAccent">@color/orange</item>
        <item name="themeColorIcon">@color/dark_orange</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
